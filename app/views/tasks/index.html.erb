<div class="m-4">
  <h1>My Tasks</h1>
  <div class="my-3">
    <ol class="list-group list-group-numbered d-inline-flex">
      <% @tasks.each do |task| %>
          <li class="list-group-item"> <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
          [ <% if task.completed? %> ✔️
            <% else %> ❌
          <% end %>
          <%= link_to "🗑️", task_path(task), class: "text-decoration-none",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> ]</li>
      <% end %>
    </ol>
  </div>
  <p> <%= link_to "+ Add a new Task", new_task_path, class: "text-decoration-none" %></p>
</div>
